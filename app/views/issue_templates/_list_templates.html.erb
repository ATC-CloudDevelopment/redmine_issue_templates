              <% end %>
            </div>
          </div>
        </td>
        <td class="center"><%= checked_image template == default_template %></td>
        <td>
          <a data-issue-template-id="<%= template.id %>"
             class="icon icon-test template-update-link"></a>
        </td>
      </tr>
<% end %>
