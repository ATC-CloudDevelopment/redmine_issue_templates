                <span class='text'>
                  <%= content %>
                  <i class='icon icon-del' onclick='removeCheckList(this)'></a>
                </span>
                <input type='hidden' name='issue_template[checklists][]'
                       id='issue_template_checklist' value='<%= content %>'>
